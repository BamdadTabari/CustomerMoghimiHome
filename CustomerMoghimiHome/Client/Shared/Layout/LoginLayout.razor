<MudSnackbarProvider />

<div Class="bg-color" style="height: 100vh;">
    <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center">
        <div class="d-flex flex-column mud-width-full">
            <MudPaper Elevation="25" Class="pa-8" Width="100%" MaxWidth="500px">
                <MudIcon Icon="@Icons.Material.Filled.Key" Color="Color.Success" Size="Size.Large" Style="width:100px; height:100px;" />
                @Body
            </MudPaper>
        </div>
    </MudContainer>
</div>
