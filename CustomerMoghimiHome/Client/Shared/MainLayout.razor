                    <MudButton Class="my-5 mr-15" ButtonType="ButtonType.Button" Style="background-color:#5C469C;width:50%" Href="product-category-main-page">
                        <MudText Align="Align.Center" Class="shabnam" Style="color:white;" Typo="Typo.h6">
                            مطالعه ادامه مطلب <MudIcon Icon="@Icons.Material.Filled.More" />
                        </MudText>
