@page "/product-category-main-page"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="m-2">
    <MudPaper Outlined="true">
        <MudGrid Spacing="2" Justify="Justify.Center">
            @{
                foreach (var item in model)
                {
                    <MudItem lg="12" xl="12" md="12" sm="12" xs="12" Class="m-2 border-2 border-primary rounded bg-color">
                        <MudCard>    
                            <MudCardContent>
                                <MudImage Src="@item.ImagePath" Elevation="25" Class="rounded-lg" />
                                <MudText Class="m-2" Typo="Typo.h5">@item.CategoryName</MudText>
                                <MudDivider />
                                <MudText Class="m-2" Typo="Typo.caption">@item.CategoryDescription</MudText>
                            </MudCardContent>
                            <MudCardActions>
                                <MudButton Class="m-2" Color="Color.Info" Variant="Variant.Filled" OnClick="@(()=>OnReadMoreButtonClicked(item.Id))">Read More</MudButton>
                            </MudCardActions>
                        </MudCard>
                    </MudItem>
                }
            }
        </MudGrid>
    </MudPaper>
</MudContainer>

<MudPagination Color="Color.Primary" Count="_totalPagesCount" SelectedChanged="OnPageChange" BoundaryCount="2" MiddleCount="3" />