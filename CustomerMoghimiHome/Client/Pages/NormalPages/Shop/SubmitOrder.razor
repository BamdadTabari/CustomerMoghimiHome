@page "/submit-order"
@using CustomerMoghimiHome.Shared.EntityFramework.DTO.Shop;
<PageTitle>submit order</PageTitle>
<AuthorizeView>
    <Authorized>
        <MudAlert Class="border border-5 mb-5" Severity="Severity.Info" ContentAlignment="HorizontalAlignment.Center">
            <MudStack>
                <MudText Typo="Typo.h4" Align="Align.Center">
                    لطفا مشخصات خود را وارد/تایید نمایید
                </MudText>
            </MudStack>
        </MudAlert>
        <MudSpacer/>
        <MudGrid Justify="Justify.Center" Style="border:1px solid #5C469C; border-radius:10%;">
            <MudItem lg="12" xl="12" md="12" sm="12" xs="12">
                <MudForm Class="m-5" ValidationDelay="0">
                     <MudTextField For="@(()=>model.FullName)" T="string" Label="نام کامل" Required="true"
                                                      Validation="@model.FullName" @bind-Value="model.FullName" />
                    <MudTextField For="@(() => model.Address)" T="string" Label="آدرس" Required="true"
                                  Validation="@model.Address" @bind-Value="model.Address"/>

                    <MudTextField T="string" For="@(() => model.PostalCode)" Label="کد پستی" Required="true"
                                  Validation="@model.PostalCode" @bind-Value="model.PostalCode"/>

                    <MudTextField T="string" For="@(() => model.PhoneNumber)" Label="شماره تلفن" Required="true"
                                  Validation="@model.PhoneNumber" @bind-Value="model.PhoneNumber"/>

                </MudForm>
                <MudButton @onclick="SubmitUserOrder" Variant="Variant.Filled" Color="Color.Success" Class="m-5">
                    <MudText Align="Align.Center" Typo="Typo.h4" Style="color:black"> تایید مشخصات و نمایش فاکتور</MudText>
                </MudButton>
            </MudItem>
        </MudGrid>

    </Authorized>
    <NotAuthorized>
        <HasNoUserAccess />
    </NotAuthorized>
</AuthorizeView>
