@page "/submit-order"
@using CustomerMoghimiHome.Shared.EntityFramework.DTO.Shop;
<PageTitle>submit order</PageTitle>
<div class="bg-color-melo">
    <MudExpansionPanel Text="مشاهده فاکتور خرید" Class="m-5">
        <MudStack Justify="Justify.Center">
            <MudContainer Class="object-center" MaxWidth="MaxWidth.ExtraLarge">
                <MudPaper Outlined="true">
                    <MudTable Loading="true" ServerData="@(new Func<TableState, Task<TableData<ProductDto>>>(ServerReload))"
                              Hover="true" @ref="table" Bordered="true">
                        <ToolBarContent>
                            <MudText Typo="Typo.h6">Product</MudText>
                            <MudSpacer />
                            <MudTextField T="string" Placeholder="Search" Adornment="Adornment.Start"
                                          AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0">
                            </MudTextField>
                        </ToolBarContent>
                        <HeaderContent>
                            <MudTh>Name</MudTh>
                            <MudTh>Price</MudTh>
                            <MudTh>Builder Compnay</MudTh>
                            <MudTh>Description</MudTh>
                            <MudTh>Actions</MudTh>
                        </HeaderContent>
                        <RowTemplate>
                            <MudTd DataLabel="Name">@context.ProductName</MudTd>
                            <MudTd DataLabel="Price">@context.Price</MudTd>
                            <MudTd DataLabel="Price">@context.BuilderCompany</MudTd>
                            <MudTd DataLabel="Price">@context.ProductDescription</MudTd>
                            <MudTd DataLabel="Actions">
                            </MudTd>
                        </RowTemplate>
                        <PagerContent>
                            <MudTablePager />
                        </PagerContent>
                    </MudTable>
                </MudPaper>
            </MudContainer>
        </MudStack>
    </MudExpansionPanel>
    <MudDivider />
    <MudStack Justify="Justify.Center" Class="m-5">
        <MudContainer Class="object-center" MaxWidth="MaxWidth.ExtraLarge">
            <MudPaper Outlined="true">
                <MudForm Class="m-5">
                    <MudTextField T="string" Label="Address" Required="true"
                                  Validation="@model.Address" @bind-Value="model.Address" />

                    <MudTextField T="string" Label="PostalCode" Required="true"
                                  Validation="@model.PostalCode" @bind-Value="model.PostalCode" />

                    <MudTextField T="string" Label="PhoneNumber" Required="true"
                                  Validation="@model.PhoneNumber" @bind-Value="model.PhoneNumber" />

                </MudForm>
                <MudButton @onclick="Add" Variant="Variant.Filled" Color="Color.Success" Class="m-5">
                    تایید سفارش
                </MudButton>
            </MudPaper>
        </MudContainer>
    </MudStack>

</div>