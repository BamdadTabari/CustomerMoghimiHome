@page "/submit-order"
@using CustomerMoghimiHome.Shared.EntityFramework.DTO.Shop;
<PageTitle>submit order</PageTitle>
<MudPaper Class="bg-color-melo">
    <MudExpansionPanel Text="مشاهده فاکتور خرید" Class="m-5">
        <MudStack Justify="Justify.Center">
            <MudContainer Class="object-center" MaxWidth="MaxWidth.ExtraLarge">
                <MudPaper Outlined="true">
                    <MudTable Items="@Data" Hover="true" Breakpoint="Breakpoint.Sm">
                        <HeaderContent>
                            <MudTh>نام محصول</MudTh>
                            <MudTh>تعداد</MudTh>
                            <MudTh>جمع کل</MudTh>
                        </HeaderContent>
                        <RowTemplate>
                            <MudTd DataLabel="نام محصول">@context.ProductName</MudTd>
                            <MudTd DataLabel="تعداد">@context.ProductCount</MudTd>
                            <MudTd DataLabel="جمع کل">@context.ProductTotalPrice</MudTd>
                        </RowTemplate>
                    </MudTable>
                </MudPaper>
            </MudContainer>
        </MudStack>
    </MudExpansionPanel>
    <MudDivider />
    <MudStack Justify="Justify.Center" Class="m-5">
        <MudContainer Class="object-center" MaxWidth="MaxWidth.ExtraLarge">
            <MudPaper Outlined="true">
                <MudForm Class="m-5">
                    <MudTextField T="string" Label="Address" Required="true"
                                  Validation="@model.Address" @bind-Value="model.Address" />

                    <MudTextField T="string" Label="PostalCode" Required="true"
                                  Validation="@model.PostalCode" @bind-Value="model.PostalCode" />

                    <MudTextField T="string" Label="PhoneNumber" Required="true"
                                  Validation="@model.PhoneNumber" @bind-Value="model.PhoneNumber" />

                </MudForm>
                <MudButton @onclick="Add" Variant="Variant.Filled" Color="Color.Success" Class="m-5">
                    تایید سفارش
                </MudButton>
            </MudPaper>
        </MudContainer>
    </MudStack>
</MudPaper>