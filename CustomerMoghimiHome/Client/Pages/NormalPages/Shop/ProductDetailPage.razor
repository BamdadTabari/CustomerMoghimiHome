@page "/product-detail-page/{Id}"
<PageTitle>جزئیات محصول</PageTitle>

@if (model != null)
{
    <MudGrid Class="bg-color-melo">
        <MudItem lg="6" xl="6" md="6" sm="11" xs="11" Style="display:flex;">
            <MudCard Style="width:100%; height:100%">
                <MudCardContent>
                    <MudStack>
                        <MudText Typo="Typo.h5" Align="Align.Center">@model.ProductName</MudText>
                        <MudImage Alt="@model.ImageAlt" Src="@model.ImagePath" ObjectFit="ObjectFit.Cover" Class="align-center" />
                    </MudStack>
                    <br />
                    <MudText Typo="Typo.h5" Align="Align.End">_شرکت سازنده_</MudText>
                    <MudText Typo="Typo.h6" Align="Align.End">@model.BuilderCompany</MudText>
                    <br />
                    <MudText Typo="Typo.h5" Align="Align.End">ـ قیمت ـ</MudText>
                    <MudText Typo="Typo.h6" Align="Align.End">@model.Price</MudText>
                </MudCardContent>
                <MudCardActions>
                    <AuthorizeView>
                        <Authorized>
                            <MudButton ButtonType="ButtonType.Submit" Color="Color.Success" OnClick="AddToBasketAsync" Variant="Variant.Filled">
                                اضافه کردن به سبد خرید
                            </MudButton>
                        </Authorized>
                        <NotAuthorized>
                            <MudButton ButtonType="ButtonType.Button" Color="Color.Success" OnClick="NotAuthorized" Variant="Variant.Filled">
                                اضافه کردن به سبد خرید
                            </MudButton>
                        </NotAuthorized>
                    </AuthorizeView>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem lg="6" xl="6" md="6" sm="12" xs="12" Style="display:flex;">
            <MudCard Style="width:100%; height:100%">
                <MudCardContent>
                    <MudTextField T="string" Lines="20" Value="@model.ProductDescription" ReadOnly="true" Variant="Variant.Filled">
                    </MudTextField>
                    <MudTextField T="string" Value="@tagsString" Lines="5" ReadOnly="true" Variant="Variant.Filled">
                    </MudTextField>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
}
else
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
    <MudProgressLinear Color="Color.Secondary" Indeterminate="true" Class="my-7" />
}