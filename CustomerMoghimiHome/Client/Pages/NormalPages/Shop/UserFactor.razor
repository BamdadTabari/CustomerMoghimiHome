@page "/user-shopping-factor"
<PageTitle>فاکتور</PageTitle>

<AuthorizeView Context="authContext">
    <Authorized>
        <MudText Typo="Typo.h3" Align="Align.Center">فاکتور نهایی</MudText>
        
        <MudGrid Justify="Justify.Center" Class="p-5 mt-5">
            <MudItem lg="12" xl="12" md="12" sm="12" xs="12">
                <MudTable Items="@model" Hover="true" Breakpoint="Breakpoint.Sm" LoadingProgressColor="Color.Info">
                    <HeaderContent>
                        <MudTh>نام محصول</MudTh>
                        <MudTh>قیمت</MudTh>
                        <MudTh>تعداد</MudTh>
                        <MudTh>قیمت نهایی</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="نام محصول">@context.ProductName</MudTd>
                        <MudTd DataLabel="قیمت">@context.Price</MudTd>
                        <MudTd DataLabel="تعداد">@context.Quantity</MudTd>
                        <MudTd DataLabel="قیمت نهایی">@context.ProductTotalPrice</MudTd>
                    </RowTemplate>
                </MudTable>
                <MudText Align="Align.Start" Class="m-4" Typo="Typo.h5">
                    مبلغ نهایی قابل پرداخت : @FactorPrice
                </MudText>
                <MudButton Variant="Variant.Filled" Color="Color.Success">
                    <MudText Typo="Typo.h4" Align="Align.Center" Style="color:black">ورود به درگاه پرداخت </MudText>
                    <MudIcon Icon="@Icons.Material.Filled.Payment" Style="color:black"/>
                </MudButton>
            </MudItem>
        </MudGrid>
    </Authorized>
    <NotAuthorized>
        <HasNoUserAccess />
    </NotAuthorized>
</AuthorizeView>