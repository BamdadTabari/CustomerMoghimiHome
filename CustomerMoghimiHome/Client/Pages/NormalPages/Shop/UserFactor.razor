@page "/user-shopping-factor"

<MudPaper Class="bg-color-melo">
<MudTable Items="@model" Hover="true" Breakpoint="Breakpoint.Sm" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>نام محصول</MudTh>
        <MudTh>قیمت</MudTh>
        <MudTh>تعداد</MudTh>
        <MudTh>قیمت نهایی</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="نام محصول">@context.ProductName</MudTd>
        <MudTd DataLabel="قیمت">@context.ProductPrice</MudTd>
        <MudTd DataLabel="تعداد">@context.ProductCount</MudTd>
        <MudTd DataLabel="قیمت نهایی">@context.ProductTotalPrice</MudTd>
    </RowTemplate>
</MudTable>
<MudText Align="Align.Center">
        مبلغ نهایی قابل پرداخت : @FactorPrice
</MudText>
</MudPaper>