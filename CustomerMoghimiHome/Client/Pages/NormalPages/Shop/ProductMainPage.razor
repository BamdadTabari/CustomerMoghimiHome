@page "/products-page/{ProductCategoryId}"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="m-2">
    <MudPaper Outlined="true">
        <MudGrid Spacing="2" Justify="Justify.Center">
            @{
                foreach (var post in model)
                {
                    <MudItem lg="12" xl="12" md="12" sm="12" xs="12" Class="m-2 border-2 border-primary rounded bg-color">
                        <MudText Class="m-2" Typo="Typo.h1">@post.ProductName</MudText>
                        <MudText Class="m-2" Typo="Typo.caption">@post.Price</MudText>
                        <MudText Class="m-2" Typo="Typo.caption">@post.BuilderCompany</MudText>
                        <MudText Class="m-2" Typo="Typo.caption">@post.ProductDescription</MudText>
                        <MudButton Class="m-2" Color="Color.Info" Variant="Variant.Filled" OnClick="@(()=>OnReadMoreButtonClicked(post.Id))">Read More</MudButton>
                    </MudItem>
                }
            }
        </MudGrid>
    </MudPaper>
</MudContainer>

<MudPagination Color="Color.Primary" Count="_totalPagesCount" SelectedChanged="OnPageChange" BoundaryCount="2" MiddleCount="3" />