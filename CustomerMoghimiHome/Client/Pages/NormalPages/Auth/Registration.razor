@page "/registration"
<PageTitle>احراز هویت</PageTitle>

@layout LoginLayout
<MudText Typo="Typo.h4" GutterBottom="true">ساخت اکانت</MudText>
<MudText>اکانت قبلا ساختی؟ <MudLink Href="/login">ورود</MudLink></MudText>

<EditForm Model="_userForRegistration" OnValidSubmit="Register">
    <DataAnnotationsValidator />
    <MudCard>
        <MudCardContent>
            <MudTextField T="string" Label="نام کاربری" Variant="Variant.Outlined" Class="my-4" @bind-Value="_userForRegistration.UserName" For="@(() => _userForRegistration.UserName)" />
            <MudTextField T="string" Label="ایمیل" Variant="Variant.Outlined" @bind-Value="_userForRegistration.Email" For="@(() => _userForRegistration.Email)" />
            <MudTextField T="string" Label="شماره تلفن" Variant="Variant.Outlined" @bind-Value="_userForRegistration.PhoneNumber" For="@(() => _userForRegistration.PhoneNumber)" />
            <MudTextField @bind-Value="_userForRegistration.Password" For="@(() => _userForRegistration.Password)" Label="پسورد" Variant="Variant.Outlined" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="TogglePasswordVisibility" Class="mt-4" />
            <MudTextField @bind-Value="_userForRegistration.ConfirmPassword" For="@(() => _userForRegistration.ConfirmPassword)" Label="پسورد" Variant="Variant.Outlined" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="TogglePasswordVisibility" Class="mt-4" />
            <MudCheckBox @bind-Checked="@AgreeToTerms" Label="با قوانین و شرایط سایت موافقم" Color="Color.Primary" Class="ml-n1 my-3"></MudCheckBox>
        </MudCardContent>
        <MudCardActions>
            <MudButton Disabled="@(!AgreeToTerms)" ButtonType="ButtonType.Submit" style="width: 100%; height: 50px;" FullWidth="true" Variant="Variant.Filled" Color="Color.Primary"
                       Class="ml-auto">ساخت اکانت/احراز هویت</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>