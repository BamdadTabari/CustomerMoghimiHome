@page "/login"
<PageTitle>صفحه ورود</PageTitle>

@layout LoginLayout

<MudText Typo="Typo.h4" GutterBottom="true">ورود</MudText>

<MudText>اکانت نداری ؟  <MudLink Href="/registration">ساخت اکانت جدید</MudLink></MudText>
<EditForm Model="loginModelDto" OnValidSubmit="ExecuteLogin">
    <DataAnnotationsValidator />
    <MudCard>
        <MudCardContent>
            <MudTextField T="string" Label="ایمیل" Variant="Variant.Outlined" Class="my-6" @bind-Value="loginModelDto.Email" For="@(() => loginModelDto.Email)" />
            <MudTextField Label="پسورد" AdornmentIcon="@PasswordInputIcon" Variant="Variant.Outlined" Adornment="Adornment.End" OnAdornmentClick="TogglePasswordVisibility" InputType="@PasswordInput" @bind-Value="loginModelDto.Password" For="@(() => loginModelDto.Password)" />
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit" Size="Size.Large" FullWidth="true">ورود</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>