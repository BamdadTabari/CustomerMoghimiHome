                        <AdminTagPage />
                    </MudTabPanel>
                    <MudTabPanel Text="Alt" Icon="@Icons.Material.Filled.AltRoute">
                        <AdminAltPage />
                    </MudTabPanel>
                </MudTabs>
            </MudTabPanel>
            <MudTabPanel Text="Gallery" Icon="@Icons.Material.Filled.PhotoLibrary">
                <AdminGalleryPage></AdminGalleryPage>
            </MudTabPanel>
