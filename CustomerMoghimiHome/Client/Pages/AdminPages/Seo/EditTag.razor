@page "/tag-alt-taggat/{Id}"
<MudStack Justify="Justify.Center" Style="background-image: linear-gradient(180deg, rgb(5, 39, 103) 0%, #3a0647 70%); padding:7%;color:wheat">
    <MudContainer Class="object-center" MaxWidth="MaxWidth.ExtraLarge">
        <MudPaper Outlined="true">
            <MudForm Class="m-5">
                <MudTextField T="string" Label="Product Category Name" Required="true"
                              Validation="@model.Tag" @bind-Value="model.Tag" />
            </MudForm>
            <MudButton @onclick="Update" Variant="Variant.Filled" Color="Color.Success" Class="m-5">
                Update Tag
            </MudButton>
        </MudPaper>
    </MudContainer>
</MudStack>