@page "/tag-alt-taggat/{Id}"
<PageTitle>Edit</PageTitle>

<AuthorizeView Roles="Admin">
    <Authorized>
        <MudStack Justify="Justify.Center" Class="bg-color-melo">
            <MudContainer Class="object-center" MaxWidth="MaxWidth.ExtraLarge">
                <MudPaper Outlined="true">
                    <MudForm Class="m-5" ValidationDelay="0">
                        <MudTextField T="string" Label="Product Category Name" For="@(()=> model.Tag)" Required="true"
                                      Validation="@model.Tag" @bind-Value="model.Tag" />
                    </MudForm>
                    <MudButton @onclick="Update" Variant="Variant.Filled" Color="Color.Success" Class="m-5">
                        Update Tag
                    </MudButton>
                </MudPaper>
            </MudContainer>
        </MudStack>
    </Authorized>
    <NotAuthorized>
        <HasNoAdminAccess />
    </NotAuthorized>
</AuthorizeView>